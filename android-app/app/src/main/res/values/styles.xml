<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Ducharkha" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#5B21B6</item>
        <item name="colorPrimaryVariant">#6D28D9</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <item name="colorAccent">#8B5CF6</item>
        
        <item name="android:statusBarColor">#5B21B6</item>
        <item name="android:navigationBarColor">#5B21B6</item>
    </style>

    <!-- No ActionBar theme for TWA -->
    <style name="Theme.App.NoActionBar" parent="Theme.Ducharkha">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Splash Theme для скрытия браузерных элементов -->
    <style name="Theme.App.SplashScreen" parent="Theme.App.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_enhanced</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/purple_primary</item>
        <item name="android:navigationBarColor">@color/purple_primary</item>
    </style>
</resources>